
@{
    Layout = null;
    
}
@model GuestInvite;

<!Doctype html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>RSVP</title>
    </head>
    <body>
        <div class="container align-content-md-around">
            <h1>RSVP FORM</h1>
            <form asp-controller="Home" asp-action="RsvpForm1" method="post">
            <div>
                <label asp-for="@Model.name">Your Name</label>
                <input type="text" asp-for="@Model.name" />
            </div>
            <div>
                <label asp-for="@Model.email">Your Email</label>
                <input type="text" asp-for="@Model.email" />
            </div>
            <div>
                <label asp-for="@Model.phone">Your Phone Number</label>
                <input type="text" asp-for="@Model.phone" />
            </div>
            <div>
                <label asp-for="@Model.willAttend">Will Attend?</label>
                <input type="text" asp-for="@Model.willAttend" />
            </div>

            <div>
                <button class="btn btn-success" type="submit">Submit</button>
            </div>


            </form>
        </div>

       
        
    </body>
</html>
